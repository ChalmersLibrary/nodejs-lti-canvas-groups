doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title nodejs-lti-canvas-groups
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='nodejs-lti-canvas-groups')
    meta(name='author', content='Rolf Johansson')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN' crossorigin='anonymous')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato:300,400,400i,700&amp;subset=latin-ext&amp;display=swap')
    link(rel='stylesheet', href='/assets/styles/styles.css?v=1.4')
  body
    .container-fluid.dashboard
      .row
        .col-lg-12.text-left
          div.jumbotron
            h1 Canvas Group Tool
            p.lead Helping Canvas teachers and admins at Chalmers University of Technology organize their groups and users.
      .row
        .col-sm
          div.card.text-center.text-white.bg-dark
            div.card-body
              h1#active_users.card-title 28
              p.card-text Active users today
        .col-sm
          div.card.text-center.text-white.bg-dark
            div.card-body
              h1#total_users.card-title 165
              p.card-text Authorized users
        .col-sm
          div.card.text-center.text-white.bg-secondary
            div.card-body
              h1#self_signup_configs.card-title 446
              p.card-text Self signup configs
        .col-sm
          div.card.text-center.text-white.bg-primary
            div.card-body
              h1#total_writes.card-title 446
              p.card-text Cache writes
        .col-sm
          div.card.text-center.text-white.bg-primary
            div.card-body
              h1#total_reads.card-title 46
              p.card-text Cache reads
                span.percent
      .row
        .col-sm-12
          canvas#chartContainer(width='100%')
      .row
        .col-lg-12.text-left
          hr
          p
            small #{statistics.name} #{statistics.version} #{statistics.app_env} Node #{statistics.node} <!-- render time #{statistics.running_s}s, #{statistics.running_ms}ms. -->
            small
              a(href='/groups') View groups for this course

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js')
    script(src='/assets/js/script.js?v=1.4.2.1')